---
Attribute:
  exclude:
  - BuildOfferTrade#offer
  - BuildOfferTrade#trade
  - BuildWantTrade#trade
  - BuildWantTrade#want

DataClump:
  exclude:
  - Authorize

DuplicateMethodCall:
  exclude:
  - OffersController#create
  - WantsController#create

InstanceVariableAssumption:
  exclude:
  - AccountsController
  - OffersController
  - WantsController

IrresponsibleModule:
  exclude:
  - ApplicationCable::Channel
  - ApplicationCable::Connection
  - ApplicationHelper
  - ApplicationJob
  - BookTradingClub::Application
  - ContactTest
  - OfferTest
  - TradeTest
  - WantTest

UtilityFunction:
  exclude:
  - Authorize
  - OfferTest#account_create
  - TradeTest#account_create
  - WantTest#account_create

TooManyStatements:
  exclude:
    - create_account_and_login
    - TradeTest#setup 

exclude_paths:
 - db/migrate/**/*
