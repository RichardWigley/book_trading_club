---
DataClump:
  exclude:
  - Authorize

DuplicateMethodCall:
  exclude:
  - OffersController#create
  - WantsController#create

InstanceVariableAssumption:
  exclude:
  - OffersController
  - WantsController

IrresponsibleModule:
  exclude:
  - ApplicationCable::Channel
  - ApplicationCable::Connection
  - ApplicationHelper
  - ApplicationJob
  - BookTradingClub::Application
  - OfferTest
  - WantTest

UtilityFunction:
  exclude:
  - Authorize
  - OfferTest#account_create
  - WantTest#account_create

TooManyStatements:
  exclude:
    - create_account_and_login

exclude_paths:
 - db/migrate/**/*
