---
Attribute:
  exclude:
  - BuildOfferTrade#offer
  - BuildOfferTrade#trade
  - BuildWantTrade#trade
  - BuildWantTrade#want

DataClump:
  exclude:
  - Authorize

DuplicateMethodCall:
  exclude:
  - ApplicationHelper#show_errors
  - OffersController#create
  - WantsController#create

InstanceVariableAssumption:
  exclude:
  - AccountsController
  - ContactsController
  - OffersController
  - WantsController

IrresponsibleModule:
  exclude:
  - ApplicationCable::Channel
  - ApplicationCable::Connection
  - ApplicationHelper
  - ApplicationJob
  - BookTradingClub::Application
  - ContactTest
  - OfferTest
  - TradeTest
  - WantTest

LongParameterList:
  exclude:
  - ContactPage#fill

UtilityFunction:
  exclude:
  - ApplicationHelper#show_errors
  - Authorize
  - OfferTest#account_create
  - TradeTest#account_create
  - WantTest#account_create

TooManyStatements:
  exclude:
    - create_account_and_login
    - TradeTest#setup 
    - 'ContactPage#fill'

UncommunicativeParameterName:
  exclude:
  - 'ContactPage#fill'

exclude_paths:
 - db/migrate/**/*
