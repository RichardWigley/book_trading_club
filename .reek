---
Attribute:
  exclude:
  - BuildOfferTrade#offer
  - BuildOfferTrade#trade
  - BuildWantTrade#trade
  - BuildWantTrade#want

DataClump:
  exclude:
  - Authorize

DuplicateMethodCall:
  exclude:
  - ApplicationHelper#show_errors
  - OffersController#create
  - WantsController#create

InstanceVariableAssumption:
  exclude:
  - AccountsController
  - ContactsController
  - OffersController
  - WantsController

IrresponsibleModule:
  exclude:
  - ApplicationCable::Channel
  - ApplicationCable::Connection
  - ApplicationHelper
  - ApplicationJob
  - BookTradingClub::Application
  - ContactTest
  - OfferTest
  - TradeTest
  - WantTest

LongParameterList:
  exclude:
  - create_account_with_contact_and_login
  - ContactPage#fill

UtilityFunction:
  exclude:
  - ApplicationHelper#show_errors
  - Authorize
  - account_create

TooManyStatements:
  exclude:
    - ContactsController#update
    - create_account_and_login
    - TradeTest#setup 
    - ContactPage#fill
    - WantsController#new

UncommunicativeParameterName:
  exclude:
  - create_account_with_contact_and_login
  - ContactPage#fill

exclude_paths:
 - db/migrate/**/*
