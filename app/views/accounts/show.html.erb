<% content_for :title, "Account" %>
<h1 class='headings--compressed'>Account</h1>
<div class= 'layout__site__content  u-margin-bottom'>
  <%= link_to('Log out', destroy_account_session_path) %>
</div>

<section class='layout__site__content list  u-margin-bottom'>
  <h2 class='headings--compressed'>Trades</h1>
  <div class='list__card  list__card--primary-light'>
    <%= link_to edit_contact_path(@account.contact) do %>
      <div class="grid grid--gutters">
        <div class="grid__cell">
          <%= @account.email %>
        </div>
      </div>
    <% end %>
  </div>
</section>

<section class='layout__site__content list'>
  <h2 class='headings--compressed'>Trades</h1>
  <div class='list__card  list__card--primary-light'>
    <div class="grid grid--gutters">
      <div class="grid__cell">
        Title
      </div>
      <div class="grid__cell">
        Author
      </div>
    </div>
    <% @trades.each do |want|  %>
      <%= link_to want_path(want) do %>
        <div class="grid grid--gutters">
          <div class="grid__cell">
            <%= trade.book.title %>
          </div>
          <div class="grid__cell">
            <%= trade.book.author %>
          </div>
        </div>
      <% end %>
    <% end %>
    <% if @trades.empty? %>
     <p>You have not made a trade. When completed agreed trades will appear here.</p>
    <% end %>
  </div>
</section>
