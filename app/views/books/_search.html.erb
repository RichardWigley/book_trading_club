<%= form_tag(path, method: 'get', id: 'search-form', class: 'input-add-on  u-margin-top-small  u-margin-bottom-large') do %>
  <%= text_field_tag :search, params[:search], placeholder: 'Search for books', class: 'input-add-on__item  input-add-on__item--secondary--1' %>
  <%= button_tag("Search", class: 'input-add-on__field  input-add-on__field--secondary--1') do %>
    <%= fa_icon('search') %>
    Search
  <% end %>
<% end %>
