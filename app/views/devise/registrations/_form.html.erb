<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= devise_error_messages! %>

  <div class="form__field">
    <%= f.label :email %><br />
    <%= f.email_field :email, autofocus: true, class: 'form__row' %>
  </div>

  <div class="form__field">
    <%= f.label :password %>
    <% if minimum_password_length %>
    <em>(<%= minimum_password_length %> characters minimum)</em>
    <% end %><br />
    <%= f.password_field :password, autocomplete: "off", class: 'form__row' %>
  </div>

  <div class="form__field">
    <%= f.label :password_confirmation %><br />
    <%= f.password_field :password_confirmation, autocomplete: "off", class: 'form__row'%>
  </div>

  <div class="actions  u-padding--bottom  list__card__divider">
    <%= f.submit "Sign up", class: 'button  button__secondary--2' %>
  </div>
<% end %>

Already have an account? <%= link_to 'Log In', new_account_session_path %>
